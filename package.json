{
  "name": "dvt",
  "version": "2.4.9",
  "type": "module",
  "description": "DVT - Workflow Engine Documentation and Code",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint \"packages/**/*.{ts,tsx}\" --max-warnings 0",
    "lint:fix": "eslint \"packages/**/*.{ts,tsx}\" --fix",
    "lint:md": "markdownlint-cli2 \"docs/**/*.md\" \"README.md\" --ignore-path .markdownlintignore",
    "lint:determinism": "eslint \"packages/engine/src/**/*.ts\" \"packages/adapter-temporal/src/**/*.ts\" --max-warnings 0",
    "format": "prettier --write '**/*.{ts,js,json,md,yml,yaml}'",
    "format:check": "prettier --check '**/*.{ts,js,json,md,yml,yaml}'",
    "type-check": "tsc --noEmit",
    "verify:prepush": "pnpm test:contracts:compile && pnpm type-check && node scripts/check-changed.cjs",
    "build": "pnpm -r build",
    "build:clean": "rimraf dist && pnpm -r build",
    "test": "pnpm -r test",
    "test:engine": "pnpm --filter @dvt/engine test",
    "test:contracts": "pnpm --filter @dvt/contracts test",
    "test:contracts:compile": "pnpm --filter @dvt/contracts build",
    "test:adapter-postgres": "pnpm --filter @dvt/adapter-postgres test",
    "test:adapter-temporal": "pnpm --filter @dvt/adapter-temporal test",
    "test:cli": "pnpm --filter @dvt/cli test",
    "test:determinism": "pnpm --filter @dvt/engine test -- --grep determinism || true",
    "test:replay": "pnpm --filter @dvt/engine test -- --grep replay || true",
    "test:coverage": "pnpm -r test -- --coverage",
    "validate:contracts": "pnpm --filter @dvt/cli validate-contracts",
    "kg:neo4j:up": "docker compose -f docker-compose.neo4j.yml up -d",
    "kg:neo4j:down": "docker compose -f docker-compose.neo4j.yml down",
    "kg:generate": "node scripts/neo4j/neo4j-generate-cypher.cjs --out scripts/neo4j/generated-repo.cypher",
    "kg:check": "pnpm kg:generate && git diff --exit-code -- scripts/neo4j/generated-repo.cypher",
    "kg:seed": "node scripts/neo4j/neo4j-seed.cjs",
    "kg:ingest": "node scripts/neo4j/neo4j-ingest-repo.cjs",
    "kg:sync": "pnpm kg:generate && pnpm kg:seed && pnpm kg:ingest",
    "kg:query": "node scripts/neo4j/neo4j-query-context.cjs",
    "kg:roadmap:tree": "node scripts/neo4j/neo4j-query-roadmap-tree.cjs",
    "kg:prompt": "node scripts/neo4j/neo4j-json-to-prompt.cjs",
    "contracts:index:generate": "node scripts/generate-contract-index.cjs",
    "contracts:index:check": "pnpm contracts:index:generate && git diff --quiet -- docs/architecture/engine/contracts/README.md",
    "golden:validate": "pnpm --filter @dvt/cli run-golden-paths",
    "versioning-check": "node -e \"console.log('Versioning check: OK')\"",
    "release": "echo \"Releases are managed by release-please workflow\"",
    "prepare": "husky",
    "precommit": "lint-staged && pnpm lint:determinism"
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/*/test/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "scripts/neo4j/*.cjs": [
      "pnpm kg:generate",
      "node -e \"const fs=require('fs');const cp=require('child_process');const p='scripts/neo4j/generated-repo.cypher';if(fs.existsSync(p)){cp.execSync('git add -- '+p,{stdio:'inherit'})}\""
    ],
    "docs/architecture/engine/contracts/**/*.{md,json}": [
      "pnpm contracts:index:generate",
      "node -e \"const fs=require('fs');const cp=require('child_process');const p='docs/architecture/engine/contracts/README.md';if(fs.existsSync(p)){cp.execSync('git add -- '+p,{stdio:'inherit'})}\""
    ],
    "docs/decisions/ADR-*.md": [
      "pnpm kg:generate",
      "node -e \"const fs=require('fs');const cp=require('child_process');const p='scripts/neo4j/generated-repo.cypher';if(fs.existsSync(p)){cp.execSync('git add -- '+p,{stdio:'inherit'})}\""
    ],
    "*.{js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dunay2/dvt.git"
  },
  "keywords": [
    "workflow",
    "orchestration",
    "temporal",
    "dbt",
    "data-engineering"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^10.0.1",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "22.19.11",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vitest": "^0.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.1.1",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4",
    "zod-to-json-schema": "^3.25.1"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "22.19.11",
      "vitest": "3.2.4",
      "@vitest/ui": "3.2.4",
      "@vitest/coverage-v8": "3.2.4",
      "@vitest/expect": "3.2.4",
      "@vitest/runner": "3.2.4",
      "@vitest/snapshot": "3.2.4",
      "@vitest/spy": "3.2.4",
      "@vitest/utils": "3.2.4"
    }
  },
  "dependencies": {
    "neo4j-driver": "^5.28.1",
    "zod": "^4.3.6"
  }
}
