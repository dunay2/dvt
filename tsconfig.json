{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./engine",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@dvt/engine/*": ["engine/src/*"],
      "@dvt/contracts/*": ["engine/contracts/*"],
      "@dvt/adapters/*": ["engine/adapters/*"]
    }
  },
  "include": [
    "engine/src/**/*.ts",
    "engine/test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
