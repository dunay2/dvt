{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@dvt/contracts": ["packages/@dvt/contracts/index.ts"],
      "@dvt/contracts/*": ["packages/@dvt/contracts/src/*"],
      "@dvt/engine": ["packages/@dvt/engine/src/index.ts"],
      "@dvt/engine/*": ["packages/@dvt/engine/src/*"],
      "@dvt/adapter-postgres/*": ["packages/@dvt/adapter-postgres/src/*"],
      "@dvt/adapter-temporal/*": ["packages/@dvt/adapter-temporal/src/*"],
      "@dvt/cli/*": ["packages/@dvt/cli/src/*"]
    }
  },
  "include": ["packages/*/src"],
  "exclude": ["node_modules", "dist", "test"]
}
